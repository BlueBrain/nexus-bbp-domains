{
  "@context": [
    "{{base}}/contexts/nexus/core/schema/v0.1.0",
    {
      "nsg": "https://bbp-nexus.epfl.ch/vocabs/bbp/neurosciencegraph/core/v0.1.0/",
      "this": "{{base}}/schemas/hbphackaton/simulation/efeature/v0.1.0/shapes/"
    }
  ],
  "@type": "nxv:Schema",
  "imports": [
    "{{base}}/schemas/hbphackaton/simulation/modelinstance/v0.1.0",
    "{{base}}/schemas/hbphackaton/simulation/modelscript/v0.1.0"
  ],
  "shapes": [
    {
      "@id": "this:ETypeFeatureProtocolShape",
      "@type": "sh:NodeShape",
      "label": "This shape is for e-type extracted features and protocols",

      "comment": "When stimulus starts?",

      "targetClass": "nsg:ETypeFeatureProtocol",
      "nodekind": "sh:BlankNodeOrIRI",
      "and": [
        {
          "node": "{{base}}/schemas/bbp/core/entity/v0.1.0/shapes/EntityShape"
        }
      ]
    },
    {
      "@id": "this:BluePyEfeConfigurationShape",
      "@type": "sh:NodeShape",
      "label": "Configuration for the efeature extraction",
      "targetClass": "prov:BluePyEfeConfiguration",
      "and": [
        {
          "node": "{{base}}/schemas/bbp/core/entity/v0.1.0/shapes/EntityShape"
        },
        {
          "property": [
              "path": "nsg:Distribution",
              "name": "Config file",
              "description": "Link to the python configuration file",
              "node": "{{base}}/schemas/nexus/core/distribution/v0.1.0/DistributionShape",
              "minCount": 1,
              "maxCount": 1
          ]
        }
    },
    {
      "@id": "this:TraceCellCollectionShape",
      "@type": "sh:NodeShape",
      "label": "Trace collection",
      "label": "This shape is for e-type extracted features and protocols",
      "targetClass": "prov:Collection",
      "and": [
        {
          "node": "bbpcolsh:CollectionShape"
        },
        {
          "property": [
            {
              "path": "prov:hadMember",
              "name": "Member",
              "description": "The patchedCell member(s) of the collection",
              "node": "this:TraceCollectionMemberShape"
            }
          ]
        }
      ]
    },
    {
      "@id": "this:TraceCollectionMemberShape",
      "@type": "sh:NodeShape",
      "label": "The shape of the trace collection member(s)",
      "targetObjectsOf": "prov:hadMember",
      "class": "nsg:Trace"
    }
  ]
}
