{
  "@context": [
    "{{base}}/contexts/nexus/core/schema/v0.1.0",
    "{{base}}/contexts/nexus/core/standards/v0.1.0",
    {
      "this": "{{base}}/schemas/nexus/schemaorg/organization/v0.1.0/shapes/"
    }
  ],
  "@type": "nxv:Schema",
  "shapes": [
    {
      "@id": "this:OrganizationShape",
      "@type": "sh:NodeShape",
      "label": "schema.org organization shape definition.",
      "targetClass": "schema:Organization",
      "property": [
        {
          "path": "schema:parentOrganization",
          "name": "Parent Organization"
        },
        {
          "path": "schema:email",
          "name": "Email",
          "datatype": "xsd:string",
          "pattern": "^[^@\\s]+@[^@\\s]+\\.[^@\\s]+$"
        },
        {
          "path": "schema:address",
          "name": "Address",
          "description": "Physical address of the organization.",
          "or": [
            {
              "class": "schema:PostalAddress",
              "node": "this:PostalAddressShape"
            },
            {
              "datatype": "xsd:string"
            }
          ]
        },
        {
          "path": "schema:name",
          "name": "Name",
          "description": "Name of the organization",
          "datatype": "xsd:string"
        }
      ]
    },
    {
      "@id": "this:PostalAddressShape",
      "@type": "sh:NodeShape",
      "property": [
        {
          "path": "schema:faxNumber",
          "name": "Fax",
          "datatype": "xsd:string"
        },
        {
          "path": "schema:telephone",
          "name": "Telephone",
          "datatype": "xsd:string"
        },
        {
          "path": "schema:addressCountry",
          "name": "Country",
          "datatype": "xsd:string"
        },
        {
          "path": "schema:addressLocality",
          "name": "Locality",
          "datatype": "xsd:string"
        },
        {
          "path": "schema:postalCode",
          "name": "Postal Code",
          "datatype": "xsd:string"
        },
        {
          "path": "schema:streetAddress",
          "name": "Street",
          "datatype": "xsd:string"
        }
      ]
    }
  ]
}