{
  "@context": [
    "{{base}}/contexts/nexus/core/shacl20170720/v0.1.0",
    {
      "this": "{{base}}/schemas/nexus/core/resource/v0.1.0/shapes/"
    }
  ],
  "@type": "nxv:Schema",
  "shapes": [
    {
      "@id": "this:ResourceShape",
      "@type": "sh:NodeShape",
      "label": "A shape definition for a resource in Nexus.",
      "targetClass": [
        "nxv:Instance",
        "nxv:Schema"
      ],
      "targetSubjectsOf": [
        "nxv:rev",
        "nxv:deprecated",
        "nxv:published",
        "nxv:links"
      ],
      "property": [
        "this:RevisionPropertyShape",
        "this:DeprecatedPropertyShape",
        "this:PublishPropertyShape",
        "this:LinksPropertyShape"
      ]
    },
    {
      "@id": "this:RevisionPropertyShape",
      "@type": "sh:PropertyShape",
      "path": "nxv:rev",
      "name": "Revision number",
      "description": "The revision number of a resource",
      "datatype": "xsd:integer",
      "minInclusive": 1,
      "maxCount": 1
    },
    {
      "@id": "this:DeprecatedPropertyShape",
      "@type": "sh:PropertyShape",
      "path": "nxv:deprecated",
      "name": "Deprecated",
      "description": "A boolean tag indicating whether the resource is deprecated or not.",
      "datatype": "xsd:boolean",
      "maxCount": 1
    },
    {
      "@id": "this:PublishPropertyShape",
      "@type": "sh:PropertyShape",
      "path": "nxv:published",
      "name": "Published",
      "description": "A boolean tag indicating whether the resource has been published or not.",
      "datatype": "xsd:boolean",
      "maxCount": 1
    },
    {
      "@id": "this:LinksPropertyShape",
      "@type": "sh:PropertyShape",
      "path": "nxv:links",
      "name": "Links",
      "description": "Links towards related resources.",
      "node": "this:LinkShape"
    },
    {
      "@id": "this:LinkShape",
      "@type": "sh:NodeShape",
      "nodeKind": "sh:BlankNode",
      "property": [
        {
          "path": "nxv:rel",
          "name": "Relation",
          "description": "The relation name.",
          "or": [
            {
              "datatype": "xsd:anyURI",
              "pattern": "https?://.+"
            },
            {
              "datatype": "xsd:string"
            }
          ],
          "minCount": 1,
          "maxCount": 1
        },
        {
          "path": "nxv:href",
          "name": "href",
          "description": "The link to follow to resolve the related resource (s).",
          "datatype": "xsd:anyURI",
          "pattern": "https?://.+",
          "minCount": 1,
          "maxCount": 1
        }
      ]
    }
  ]
}